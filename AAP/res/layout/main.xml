<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="5dip" android:id="@+id/position" android:text="00:00"></TextView>
</FrameLayout>

<FrameLayout android:layout_width="fill_parent" android:id="@+id/FrameLayout04" android:layout_height="wrap_content" android:background="@drawable/fond5" android:layout_below="@id/AbsoluteLayout02">
	<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="top|center" android:id="@+id/RelativeLayout02">
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/loop" android:id="@+id/loop" android:layout_marginRight="5dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/micro" android:background="@drawable/buttonmicro" android:layout_toRightOf="@id/loop" android:layout_marginLeft="5dip" android:layout_marginRight="5dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/note" android:background="@drawable/buttonnote" android:layout_toRightOf="@id/micro" android:layout_marginLeft="5dip" android:layout_marginRight="5dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tonalite" android:background="@drawable/buttontonalite" android:layout_toRightOf="@id/note" android:layout_marginLeft="5dip" android:layout_marginRight="5dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/enregistrer" android:background="@drawable/buttonenregistrer" android:layout_toRightOf="@id/tonalite" android:layout_marginLeft="5dip"></ImageButton>
