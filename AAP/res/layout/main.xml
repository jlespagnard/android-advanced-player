	<SeekBar android:layout_gravity="top|center" android:thumb="@drawable/seekbar_thumb" android:maxHeight="5dip" android:max="100" android:progressDrawable="@drawable/seekbar_fond" android:layout_height="wrap_content" android:id="@+id/seekbar_music" android:layout_width="fill_parent" android:paddingRight="50dip" android:paddingLeft="50dip"></SeekBar>
