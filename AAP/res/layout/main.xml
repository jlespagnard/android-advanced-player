<FrameLayout android:id="@+id/FrameLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:minHeight="78dip" android:background="@drawable/fond7" android:layout_alignParentBottom="true">
	<AbsoluteLayout android:id="@+id/AbsoluteLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="5dip" android:layout_gravity="bottom|center">
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_y="10dip" android:layout_x="117dip" android:id="@+id/next" android:background="@drawable/buttonnext"></ImageButton>
		<ImageButton android:background="@drawable/play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_x="70dip" android:id="@+id/playPause" android:layout_y="5dip"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_x="30dip" android:layout_y="10dip" android:id="@+id/previous" android:background="@drawable/buttonprevious"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_x="0dip" android:layout_y="16dip" android:id="@+id/previous2" android:background="@drawable/buttonprevious2"></ImageButton>
