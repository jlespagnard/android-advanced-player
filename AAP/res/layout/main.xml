<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_y="100dip" android:max="100" android:thumb="@drawable/reglagev" android:maxHeight="1dip" android:layout_x="10dip" android:progressDrawable="@drawable/seekbar_fond" android:minWidth="80dip" android:id="@+id/seekbar_volume" android:thumbOffset="1dip" android:progress="30" android:visibility="invisible" android:layout_below="@id/FrameLayout04" android:layout_marginLeft="10px"></SeekBar>


</RelativeLayout>



