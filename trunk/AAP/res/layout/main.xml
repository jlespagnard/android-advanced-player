<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" android:id="@+id/RelativeLayout01">
                
<AbsoluteLayout android:id="@+id/AbsoluteLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@drawable/fond6">
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:layout_x="0dip" android:layout_y="3dip" android:text="titre chanson" android:id="@+id/titre"></TextView>
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_x="1dip" android:gravity="center" android:layout_y="22dip" android:text="auteur" android:id="@+id/auteur"></TextView>
	<FrameLayout android:layout_width="fill_parent" android:id="@+id/FrameLayout03" android:layout_height="fill_parent" android:layout_x="0dip" android:layout_y="0dip">
		<ImageButton android:layout_width="wrap_content" android:background="@drawable/buttondossier" android:layout_height="wrap_content" android:layout_gravity="left|center_vertical" android:id="@+id/btnDossier" android:onClick="openDossierMusic"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:background="@drawable/buttonalbum" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical" android:id="@+id/btnAlbum"></ImageButton>
	</FrameLayout>
</AbsoluteLayout>

<ImageView android:layout_alignParentLeft="true" android:layout_below="@id/AbsoluteLayout02" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="50dip" android:id="@+id/fondmusic" android:background="@drawable/fond7"></ImageView>

<FrameLayout android:layout_width="fill_parent" android:id="@+id/FrameLayout04" android:layout_below="@id/AbsoluteLayout02" android:background="@drawable/fond2" android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RelativeLayout02" android:layout_gravity="center">
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/loop" android:background="@drawable/loop" android:layout_marginRight="15dip" android:onClick="onOffLoop"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/micro" android:layout_toRightOf="@id/loop" android:background="@drawable/buttonmicro" android:layout_marginRight="15dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/note" android:background="@drawable/buttonnote" android:layout_toRightOf="@id/micro" android:layout_marginRight="15dip"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tonalite" android:background="@drawable/buttontonalite" android:layout_toRightOf="@id/note" android:layout_marginRight="15dip" android:onClick="openEqualizer"></ImageButton>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/enregistrer" android:background="@drawable/buttonenregistrer" android:layout_toRightOf="@id/tonalite"></ImageButton>
	</RelativeLayout>
</FrameLayout>

<FrameLayout android:id="@+id/FrameLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_alignParentBottom="true" android:background="@drawable/fond6" android:minHeight="50dip">
	<AbsoluteLayout android:id="@+id/AbsoluteLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="5dip" android:layout_gravity="bottom|center">
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/next" android:background="@drawable/buttonnext" android:layout_x="200dip" android:layout_y="16dip"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/playPause" android:layout_y="5dip" android:layout_x="98dip" android:background="@drawable/play"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/previous" android:background="@drawable/buttonprevious" android:layout_x="0dip" android:layout_y="16dip"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/previous2" android:background="@drawable/buttonprevious2" android:layout_x="50dip" android:layout_y="14dip"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/next2" android:background="@drawable/buttonnext2" android:layout_y="14dip" android:layout_x="135dip"></ImageButton>
	</AbsoluteLayout>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="left|center" android:layout_margin="10dp" android:id="@+id/stop" android:background="@drawable/buttonstop"></ImageButton>

</FrameLayout>

<FrameLayout android:id="@+id/FrameLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_above="@id/FrameLayout02" android:background="@drawable/fond2" android:minHeight="80dp">
	<SeekBar android:max="100" android:layout_height="wrap_content" android:id="@+id/seekbar_debut" android:paddingRight="50dip" android:paddingLeft="50dip" android:layout_width="fill_parent" android:maxHeight="0px" android:thumb="@drawable/seekbar_thumbdebut" android:layout_gravity="bottom|center" android:layout_marginBottom="5dp" android:progress="0"></SeekBar>
	<SeekBar android:max="100" android:layout_height="wrap_content" android:id="@+id/seekbar_fin" android:paddingRight="50dip" android:paddingLeft="50dip" android:layout_width="fill_parent" android:maxHeight="0px" android:thumb="@drawable/seekbar_thumbfin" android:layout_gravity="bottom|center" android:layout_marginBottom="5dp" android:progress="100"></SeekBar>
	<SeekBar android:max="100" android:layout_height="wrap_content" android:id="@+id/seekbar_music" android:paddingRight="50dip" android:paddingLeft="50dip" android:layout_width="fill_parent" android:maxHeight="10dp" android:thumb="@drawable/seekbar_thumb" android:progressDrawable="@drawable/seekbar_fond" android:layout_gravity="bottom|center" android:layout_marginBottom="5dp"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/duree" android:paddingRight="5dip" android:text="00:00" android:layout_gravity="right|bottom" android:layout_marginBottom="5dp"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="5dip" android:id="@+id/position" android:text="00:00" android:layout_gravity="left|bottom" android:layout_marginBottom="5dp"></TextView>

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="top|left" android:id="@+id/loopdebut" android:background="@drawable/boutondebut" android:layout_marginTop="5dp" android:layout_marginLeft="5dp"></ImageButton>

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="top|right" android:id="@+id/loopfin" android:background="@drawable/boutonfin" android:layout_marginTop="5dp" android:layout_marginRight="5dp"></ImageButton>

</FrameLayout>

<FrameLayout android:layout_height="wrap_content" android:id="@+id/FrameLayout05" android:layout_width="wrap_content" android:layout_above="@+id/FrameLayout01" android:layout_alignParentLeft="true" android:background="@drawable/fond1" android:minHeight="70dp" android:minWidth="40dp" android:visibility="invisible">
		<ImageButton android:layout_width="wrap_content" android:id="@+id/debutplus" android:background="@drawable/boutonplus" android:layout_height="wrap_content" android:layout_gravity="top|center_horizontal" android:layout_marginTop="5dp"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:id="@+id/debutmoins" android:background="@drawable/boutonmoins" android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"></ImageButton>
</FrameLayout>

<FrameLayout android:layout_height="wrap_content" android:id="@+id/FrameLayout06" android:layout_width="wrap_content" android:layout_above="@+id/FrameLayout01" android:layout_alignParentRight="true" android:background="@drawable/fond1" android:minHeight="70dp" android:minWidth="40dp" android:visibility="invisible">
		<ImageButton android:layout_width="wrap_content" android:id="@+id/finplus" android:background="@drawable/boutonplus" android:layout_height="wrap_content" android:layout_gravity="top|center_horizontal" android:layout_marginTop="5dp"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:id="@+id/finmoins" android:background="@drawable/boutonmoins" android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"></ImageButton>
</FrameLayout>

</RelativeLayout>



